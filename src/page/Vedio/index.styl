#Vedio {
    width: 100vw;
    min-height: 424vw
    .vedio_box {
        width: 100vw;
        height: 56.1vw;
    }

    .vedio_dec {
        width: 89.1vw;
        height: 22vw;
        border-bottom: 1px solid #808080;
        margin: 3vw auto 0;
        margin-bottom: 4.5vw;

        .title_box {
            display: flex;
            justify-content: space-between;
            align-content: center;
            align-items: center;
            width: 100%;
            height: 5vw;

            .title {
                width: 58vw;
                font-size: 3.9vw;
                font-weight: bold;
                color: #333333;
            }

            .icon_box {
                width: 38vw;
                height: 5vw;
                display: flex;
                justify-content: space-between;
                align-content: center;
                align-items: center;

                .icon_item {
                    width: 45%;
                    height: 5vw;
                    display: flex;
                    align-content: center;
                    align-items: center;
                    text-align: right;
                    justify-content: flex-end;

                    img {
                        width: 5vw;
                        margin-right: 1vw;
                    }

                    span {
                        font-size: 2.6vw;
                        color: #414141;
                    }
                }
            }
        }

        .dec_box {
            width: 100%;
            margin-top: 2.5vw;
            line-height: 5.5vw;
            font-size: 3vw;
            color: #7e7e7e;
            
        }
    }

    .comment_box {
        width: 100vw;
        height: 11.5vw;
        background: #e6e6e6;
        position: fixed;
        left: 0;
        bottom: 0;
        z-index: 999999;
        display: flex;
        justify-content: space-between;
        align-content: center;
        align-items: center;

        .comment_text {
            width: 14vw;
            font-size: 3.2vw;
            color: #444;
            margin-left: 5.6vw;
            position: relative;

            span {
                position: absolute;
                font-size: 2.5vw;
                color: #bf1920;
                top: -2.6vw;
                right: -6vw;
                width: 5vw;
            }
        }

        .icon_box {
            width: 42vw;
            margin-right: 4.7vw;
            display: flex;
            justify-content: center;
            align-content: center;
            align-items: center;

            .icon_item {
                width: 12.2vw;
                display: flex;
                justify-content: center;
                align-content: center;
                align-items: center;
                margin-right: 2vw;

                img {
                    width: 4.2vw;
                    margin-right: 0.5vw;
                }

                span {
                    font-size: 2.7vw;
                    color: #444;
                }
            }
        }
    }

    .active {
        margin-top: -5vw;
        position: relative;
        z-index: 9
    }

    .comments {
        width: 89vw;
        margin: 2vw auto 0;
        margin-bottom: 10vw;

        .item {
            width: 100%;
            border-bottom: 1px solid #808080;
            padding-bottom: 4.4vw;
            margin-top: 3.6vw;

            .tip {
                display: flex;
                height: 7vw;
                width: 100%;
                justify-content: space-between;

                .user_dec {
                    display: flex;
                    justify-content: flex-start;

                    img {
                        width: 7vw;
                        border-radius: 50%;
                        margin-right: 2.2vw;
                    }

                    .user_dec_box {
                        height: 7vw;

                        .user_name {
                            font-size: 2.8vw;
                            color: #444444;
                            line-height: 3.8vw;
                        }

                        .user_time {
                            font-size: 2vw;
                            line-height: 3vw;
                            color: #808080;
                        }
                    }
                }

                .ok_num {
                    display: flex;
                    align-content: center;
                    align-items: center;
                    height: 4vw;

                    img {
                        width: 4vw;
                        margin-right: 2vw;
                    }

                    span {
                        font-size: 2.3vw;
                    }
                }
            }

            .content {
                margin-top: 2.3vw;
                line-height: 5vw;
                font-size: 2.8vw;
                color: #444444;
            }
        }
    }

    .input_box {
        width: 100vw;
        height: 11.8vw;
        background: #ffffff;
        box-shadow: 0 0 4vw #e0e0e0;
        position: fixed;
        bottom: 0;
        left: 0;
        z-index: 99999;
        display: flex;
        justify-content: center;
        align-content: center;
        align-items: center;

        img {
            width: 7vw;
            border-radius: 50%;
        }

        .input {
            width: 53vw;
            height: 6.8vw;
            background: #e6e6e6;
            color: #858585;
            border: none;
            margin-left: 5.9vw;
            margin-right: 4vw;
        }

        .submit {
            width: 19.2vw;
            height: 6.8vw;
            background: #e6e6e6;
            color: #858585;
            border: none;
            outline: none
        }
        .submit_active{
            background: #bf2920
            color: #ffffff
            }
    }
    .share_box{
        width 100vw
        height 100vh
        background rgba(0,0,0,.75) url(http://www.raziel.site/general/share.png) right top no-repeat;
        background-size: 90%
        position fixed
        top 0
        left 0
        z-index: 9999999
        }
    .tip_box{
        width 50vw
        font-size 3vw
        color: #888
        padding 2vw
        border:1px solid #888
        background: #ffffff
        position fixed
        top -10vh
        left 24vw
        z-index: 99999999
        border-radius: 1vw
        opacity :0
        }
}