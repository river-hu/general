#Anthology{
    width: 100vw
    height 53vw
    box-sizing: border-box
   
    .title{
        width 100%
        height 5.2vw
        display: flex
        align-content: center
        align-items: center
        position: relative
        .menuImg{
            width 5vw
            margin-left 4.1vw
            margin-right 3.5vw
            }
        .Anthology_text{
            font-size 5vw
            color: #bf1920
            font-weight bold
            line-height 5.2vw
            }
        .view_more{
            font-size 3vw
            color: #6d6d6d
            float right
            margin-right 4vw
            position absolute
            right 0
            width 16vw
            }
    }
    .scroll_box{
        margin-top 4.3vw
        height 45vw
        overflow-x: scroll
        .box{
            width 365vw
        } 
    }

}