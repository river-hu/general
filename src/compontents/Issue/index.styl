
#Issue {
    display: inline-block;
    width: 41.4vw;
    margin-left: 3.3vw;
    margin-bottom: 2.6vw;

    .img_box {
        position: relative;
        width: 100%;
        height: 24.5vw;
        border-radius: 1.5vw;
        overflow: hidden;

        .userImg {
            width: 100%;
        }

        .shadow {
            width: 100%;
            height: 100%;
            background: linear-gradient(rgba(0, 0, 0, 0), rgba(0, 0, 0, 0.8));
            position: absolute;
            top: 0;
            left: 0;

            .order {
                position: absolute;
                bottom: 2vw;
                left: 3vw;
                font-size: 3vw;
                font-weight: bold;
                color: #DA3822;
            }
        }
    }
}

.name {
    margin-top: 3.6vw;
    padding-left: 1.6vw;

    .top {
        font-size: 3.4vw;
        font-weight: bold;
        color: #3f3f3f;
    }

    .dec {
        font-size: 3vw;
        color: #595959;
        margin-top: 2.2vw;
    }
}