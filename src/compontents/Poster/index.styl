#Poster {
    .title {
        width: 100vw;
        height: 5.2vw;
        display: flex;
        position: relative;
        align-content: center;
        align-items: center;
        margin-top: 0.5vw;

        .cardImg {
            margin-left: 4.2vw;
            width: 6vw;
        }

        .tip_text {
            font-size: 4.8vw;
            font-weight: bold;
            color: #b91920;
            margin-left: 2.3vw;
        }
    }

    .swiper-container {
        width: 100vw;
        height: 72.6vw;
        padding-top 5vw
    }

    .swiper-slide {
        text-align: center;
        width: 43.7vw;
        height: 68.2vw;
        /* Center slide text vertically */
        display: -webkit-box;
        display: -ms-flexbox;
        display: -webkit-flex;
        display: flex;
        -webkit-box-pack: center;
        -ms-flex-pack: center;
        -webkit-justify-content: center;
        justify-content: center;
        -webkit-box-align: center;
        -ms-flex-align: center;
        -webkit-align-items: center;
        align-items: center;
        transition: all .15s linear;
        position: relative;
        z-index: 9999;
        box-shadow: 0 0 4vw rgba(0,0,0,.3)
       
        img {
            width: 100%;

        }
    }

    .swiper-slide:not(.swiper-slide-active) {
        transform: scale(0.8);
        position: relative;
        z-index: 99;
        box-shadow: none;
    }
    .bottom_text{
        width 100%
        height 14.6vw
        background: transparent
        margin-bottom: 8vw
        margin-top: -2vw
        .name{
            line-height 7vw
            font-size 3.5vw
            color: #000
            text-align center
            }
        .user_dec{
            font-size 3vw
            text-align center
            color: #777
            }
        }

   
}